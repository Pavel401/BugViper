NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password

MILVUS_HOST=localhost
MILVUS_PORT=19530

OPENAI_API_KEY=your_openai_api_key_here
# OpenAI Embedding Models: text-embedding-3-small (1536 dims), text-embedding-3-large (3072 dims), text-embedding-ada-002 (1536 dims)
EMBEDDING_MODEL=text-embedding-3-small

# GitHub App Configuration (for BugViper bot)
GITHUB_APP_ID=your_app_id_here
GITHUB_PRIVATE_KEY_PATH=/path/to/your-app-private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Firebase service account (JSON string or file path)
SERVICE_FILE_LOC=/path/to/service-account.json

# Repository cloning (optional, defaults to system temp directory)
CLONE_DIR=/path/to/clone/repos

# ============================================================================
# PydanticAI Code Review System Configuration
# ============================================================================

# OpenRouter API Key (required for code review)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model Selection (optional - defaults to gpt-4o-mini)
# Available models: See https://openrouter.ai/models for full list
# Examples: openai/gpt-4o-mini, anthropic/claude-3.5-sonnet, anthropic/claude-3-haiku
CONTEXT_MODEL=openai/gpt-4o-mini  # For symbol extraction and context analysis
REVIEW_MODEL=openai/gpt-4o-mini   # For code review

# LLM Temperature (optional - defaults to 0.3)
# Lower values (0.1-0.3) for more consistent/deterministic output
# Higher values (0.5-0.9) for more creative output
LLM_TEMPERATURE=0.3

# Dependency Analysis (optional)
MAX_RECURSION_DEPTH=3  # Maximum depth for dependency graph traversal

# ============================================================================
# Pydantic Logfire Observability (Optional - for monitoring/debugging)
# ============================================================================

# Enable Logfire observability (set to true to enable)
ENABLE_LOGFIRE=false

# Logfire Token (get from: https://logfire.pydantic.dev/)
LOGFIRE_TOKEN=your_logfire_token_here
